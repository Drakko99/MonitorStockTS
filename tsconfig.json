{
  // Configuración simple para un script Node + TypeScript (CommonJS)
  "compilerOptions": {
    // Dónde está el código fuente y dónde saldrá compilado
    "rootDir": "./src",
    "outDir": "./dist",

    // Entorno de ejecución
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    // Tipos de Node (para process, __dirname, etc.)
    "types": ["node"],

    // Opciones de calidad
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true

    // Si quieres, luego puedes volver a activar estas:
    // "noUncheckedIndexedAccess": true,
    // "exactOptionalPropertyTypes": true
  },
  "include": ["src"]
}
