{
  "compilerOptions": {
    // Dónde está el código fuente y dónde saldrá compilado
    "rootDir": "./src",
    "outDir": "./dist",

    // Entorno de ejecución
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "types": ["node"],

    // Opciones de calidad
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src"]
}
